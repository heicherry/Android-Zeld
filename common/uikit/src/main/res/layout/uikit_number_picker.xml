<?xml version="1.0" encoding="utf-8"?>
<com.shawnlin.numberpicker.NumberPicker xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/number_picker"
    android:layout_width="30dp"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    app:np_dividerColor="@android:color/transparent"
    app:np_dividerLength="20dp"
    app:np_height="150dp"
    app:np_max="300"
    app:np_min="1"
    app:np_selectedTextColor="@android:color/holo_green_light"
    app:np_selectedTextSize="20sp"
    app:np_textColor="@android:color/holo_green_dark"
    app:np_textSize="17sp"
    app:np_value="100" />