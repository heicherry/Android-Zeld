<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="@drawable/uikit_round_rect"
    android:clipToPadding="false"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <com.ai.zeld.playground.TouchView
        android:id="@+id/move_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/playground_move_icon"
        android:translationX="-5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/go"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/playground_go"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.ai.zeld.business.wave.level1.TriangleFunctionCalView
        android:id="@+id/function_control"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>